{
  "watch": [
    "src",
    "../shared/src"
  ],
  "ext": "ts,js,json",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "dist",
    "node_modules"
  ],
  "exec": "ts-node -r tsconfig-paths/register src/main.ts",
  "execMap": {
    "ts": "node --require ts-node/register"
  },
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_PROJECT": "tsconfig.json"
  },
  "delay": "1000",
  "legacyWatch": true,
  "pollingInterval": 1000,
  "verbose": true,
  "stdin": false
}
