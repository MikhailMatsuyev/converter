datasource db {
  provider = "postgresql"
}

generator client {
  provider   = "prisma-client-js"
  output     = "../../../node_modules/.prisma/client" // стандартный путь
  engineType = "binary"
}

model User {
  id           String    @id @default(cuid())
  firebaseUid  String    @unique
  email        String
  displayName  String?
  photoURL     String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  storageQuota Int       @default(1073741824)
  usedStorage  Int       @default(0)
  isPaid       Boolean   @default(false)
  paidUntil    DateTime?
  files        File[]
}

model File {
  id         String   @id @default(cuid())
  filename   String
  status     String
  storageKey String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id])
  userId     String
}
